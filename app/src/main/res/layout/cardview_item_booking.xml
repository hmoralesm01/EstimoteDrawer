<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mCardView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tNombreLocal"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:text="TextView"
                android:paddingTop="20dp"
                android:textAlignment="center"
                android:textColor="@color/cardviewLetra"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="196dp"
                android:layout_height="152dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tFechaR"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tHoraR"
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:layout_height="39dp"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tGenteR"
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:layout_height="36dp"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tPhoneR"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingTop="10dp"
                    android:text="TextView"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/bRestarR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:icon="@drawable/delete_icon"
                tools:ignore="SpeakableTextPresentCheck"
                android:background="@color/cardviewBoton"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>