<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addBooking.AddBookingActivity">

    <Button
        android:id="@+id/bFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Fecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/bHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hora"
        app:layout_constraintEnd_toEndOf="@+id/bFecha"
        app:layout_constraintTop_toBottomOf="@+id/bFecha" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Nueva Reserva"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerLocales"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/bHora"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/bHora"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tFecha"
        android:layout_width="193dp"
        android:layout_height="46dp"
        android:text="Date"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/bFecha"
        app:layout_constraintEnd_toStartOf="@+id/bFecha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bFecha" />

    <TextView
        android:id="@+id/tHora"
        android:layout_width="193dp"
        android:layout_height="46dp"
        android:text="Time"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/bHora"
        app:layout_constraintEnd_toStartOf="@+id/bHora"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tFecha"
        app:layout_constraintTop_toTopOf="@+id/bHora"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerLocales"
        app:layout_constraintStart_toStartOf="@+id/tHora"
        app:layout_constraintTop_toTopOf="@+id/spinnerLocales" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personas"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tNumeroPersonas"
        app:layout_constraintEnd_toStartOf="@+id/tNumeroPersonas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5" />

    <EditText
        android:id="@+id/tNumeroPersonas"
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerLocales"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLocales" />

    <Button
        android:id="@+id/bCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>